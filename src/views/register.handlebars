<div class="text-center my-4">
<h1>Sign Up</h1>
</div>

<section class="form_container text-center"> 
    <form id="usersForm">
    <div class="row mb-2">
        <label for="userFirstName" class="col-sm-2 col-form-label">Nombre:</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" name="firstName" placeholder="Nombre del usuario" required>
        </div>
    </div>
    <div class="row mb-2">
        <label for="userLastName" class="col-sm-2 col-form-label">Apellido:</label>
         <div class="col-sm-10">
        <input type="text" class="form-control" name="lastName" placeholder="Apellido del usuario" required>
    </div></div>
        <div class="row mb-2">
        <label for="userAge" class="col-sm-2 col-form-label">Edad:</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" name="age" placeholder="Edad del usuario" required>
    </div></div>
        <div class="row mb-2">
        <label for="userEmail" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
        <input type="email" class="form-control" name="email" placeholder="Email del usuario" required>
    </div></div>
        <div class="row mb-2">
        <label for="userPassword" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
        <input type="password" class="form-control" name="password" placeholder="Password del usuario" required>
    </div></div>
    <button type="submit" class="btn btn-primary">Crear usuario</button>
    </form>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/register.js"></script>